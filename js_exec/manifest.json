{
	"manifest_version": 2,

	"name": "JS-Exec",
	"description": "Inject your own JavaScript in any webpage.",
	"version": "2.0",
	"author": "SeevenDev",

	"options_page": "options.html",

	"permissions": [
		"storage",
		"unlimitedStorage",
		"activeTab",
		"<all_urls>"
	],

	"browser_action":
	{
		"default_icon": "js-logo.png",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["js/background.js", "js/api.js"],
		"persistent": false
	}
}